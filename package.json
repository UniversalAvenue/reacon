{
  "name": "reacon",
  "description": "React component notation",
  "main": "lib/index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "clean": "./node_modules/rimraf/bin.js lib",
    "test": "npm run build && ./node_modules/jest-cli/bin/jest.js",
    "build": "./node_modules/babel-cli/bin/babel.js src --out-dir lib",
    "pkgfiles": "./node_modules/pkgfiles/bin/pkgfiles.js",
    "prepublish": "npm run clean && npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "release": {
    "verifyConditions": "condition-circle"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UniversalAvenue/reacon.git"
  },
  "keywords": [
    "React",
    "json",
    "component",
    "template"
  ],
  "author": "Daniel Werth√©n <danielwerthen@gmail.com> (https://github.com/danielwerthen)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UniversalAvenue/reacon/issues"
  },
  "homepage": "https://github.com/UniversalAvenue/reacon#readme",
  "peerDependencies": {
    "lodash": "*",
    "react": "^15.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "condition-circle": "^1.2.0",
    "cz-conventional-changelog": "^1.1.5",
    "jest-cli": "^12.1.1",
    "pkgfiles": "^2.3.0",
    "react-addons-test-utils": "^15.1.0",
    "rimraf": "^2.4.4",
    "semantic-release": "^4.3.5"
  },
  "jest": {
    "testPathDirs": [
      "lib"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
